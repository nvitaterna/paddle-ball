{
  "root": true,
  "env": {
    "es6": true,
    "browser": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2015,
    "project": "tsconfig.json"
  },
  "plugins": [
    "@typescript-eslint",
    "import"
  ],
  "extends": [
    "airbnb-typescript/base"
  ],
  "rules": {
    "@typescript-eslint/camelcase": "off",
    "max-len": [
      "off"
    ],
    "no-param-reassign": [
      "off"
    ],
    "no-console": "off",
    "no-debugger": "off",
    "spaced-comment": [
      "error",
      "always",
      {
        "markers": [
          "/"
        ]
      }
    ],
    "import/no-unresolved": "error",
    "no-empty": [
      "error",
      {
        "allowEmptyCatch": true
      }
    ]
  },
  "ignorePatterns": [
    "dist"
  ],
  "settings": {
    "import/parsers": {
      "@typescript-eslint/parser": [
        ".ts"
      ]
    },
    "import/resolver": {
      "typescript": {
        "alwaysTryTypes": true
      }
    }
  }
}
